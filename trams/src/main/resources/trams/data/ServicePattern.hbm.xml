<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="trams.data">

    <class name="ServicePattern" table="SERVICEPATTERN">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="name" column="NAME"/>
        <property name="daysOfOperation" column="DAYS_OF_OPERATION"/>
        <property name="returnTerminus" column="RETURN_TERMINUS"/>
        <property name="outgoingTerminus" column="OUTGOING_TERMINUS"/>
        <property name="startTime" type="calendar" column="START_TIME"/>
        <property name="endTime" type="calendar" column="END_TIME"/>
        <property name="frequency" column="FREQUENCY"/>
        <property name="routeDuration" column="ROUTE_DURATION"/>
    </class>

</hibernate-mapping>