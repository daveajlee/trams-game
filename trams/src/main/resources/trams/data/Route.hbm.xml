<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.davelee.trams.data">

    <class name="Route" table="ROUTE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="routeNumber" column="ROUTE_NUMBER"/>
        <list name="outwardStops" lazy="true" cascade="all-delete-orphan" table="ROUTE_OUTWARDSTOPS" inverse="false"> 
        	<key column="ROUTE_OUTSTOP_ID"/> 
			<index column="POSITION_index"/> 
			<many-to-many unique="true" column="ID" class="Stop"/> 
		</list>
		<list name="returnStops" lazy="true" cascade="all-delete-orphan" table="ROUTE_RETURNSTOPS" inverse="false"> 
        	<key column="ROUTE_RETURNSTOP_ID"/> 
			<index column="POSITION_index"/> 
			<many-to-many unique="true" column="ID" class="Stop"/> 
		</list>
		<list name="routeSchedules" lazy="true" cascade="all-delete-orphan" table="ROUTE_ROUTESCHEDULES" inverse="false"> 
        	<key column="ROUTE_ROUTESCHEDULES_ID"/> 
			<index column="POSITION_index"/> 
			<many-to-many unique="true" column="ID" class="RouteSchedule"/> 
		</list>
		<map name="assignedSchedules" lazy="true" cascade="all-delete-orphan" table="ROUTE_ASSIGNEDSCHEDULES" inverse="false"> 
        	<key column="ASSIGNEDSCHEDULE_ID"/> 
			<index column="property_name" type="string"/> 
			<many-to-many unique="true" column="ELEMENT" class="Vehicle"/> 
		</map>
		<map name="timetables" lazy="true" cascade="all-delete-orphan" table="ROUTE_TIMETABLES" inverse="false"> 
        	<key column="TIMETABLES_ID"/> 
			<index column="property_name" type="string"/> 
			<many-to-many unique="true" column="ELEMENT" class="Timetable"/> 
		</map>
    </class>

</hibernate-mapping>