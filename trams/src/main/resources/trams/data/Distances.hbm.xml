<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.davelee.trams.data">

    <class name="Distances" table="DISTANCES">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="stopName" column="STOP_NAME"/>
		<map name="distanceTimes" lazy="true" cascade="all-delete-orphan" table="DISTANCES_LISTS" inverse="false"> 
        	<key column="DISTANCELIST_ID"/> 
			<index column="property_name" type="string"/> 
			<element column="ELEMENT" type="integer"/> 
		</map>
    </class>

</hibernate-mapping>