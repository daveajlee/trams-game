<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd"
       >
       
       <util:list id="availableVehiclesList" value-type="de.davelee.trams.data.Vehicle">
       		<ref bean="vehicle1"/>
       		<ref bean="vehicle2"/>
       		<ref bean="vehicle3"/>
       		<ref bean="vehicle4"/>
       </util:list>
       
       <bean id="vehicle1" class="de.davelee.trams.data.Vehicle">
       		<property name="model" value="MyBus Single Decker"/>
       		<property name="imagePath" value="singlebus.png"/>
       		<property name="seatingCapacity" value="44"/>
       		<property name="standingCapacity" value="36"/>
       		<property name="purchasePrice" value="85000.00"/>
       </bean>
       
       <bean id="vehicle2" class="de.davelee.trams.data.Vehicle">
       		<property name="model" value="MyBus Double Decker"/>
       		<property name="imagePath" value="doubledecker.png"/>
       		<property name="seatingCapacity" value="78"/>
       		<property name="standingCapacity" value="25"/>
       		<property name="purchasePrice" value="160000.00"/>
       </bean>
       
       <bean id="vehicle3" class="de.davelee.trams.data.Vehicle">
       		<property name="model" value="MyBus Bendy"/>
       		<property name="imagePath" value="bendybus.png"/>
       		<property name="seatingCapacity" value="48"/>
       		<property name="standingCapacity" value="97"/>
       		<property name="purchasePrice" value="190000.00"/>
       </bean>
       
       <bean id="vehicle4" class="de.davelee.trams.data.Vehicle">
       		<property name="model" value="MyTram Tram1"/>
       		<property name="imagePath" value="tram.png"/>
       		<property name="seatingCapacity" value="104"/>
       		<property name="standingCapacity" value="83"/>
       		<property name="purchasePrice" value="280000.00"/>
       </bean>
       
</beans>