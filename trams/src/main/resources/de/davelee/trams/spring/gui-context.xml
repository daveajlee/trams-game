<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

       <context:property-placeholder location="classpath:gui.properties"/>
       
       <!-- Screens -->
       
       <bean name="gui:welcomeScreen" class="de.davelee.trams.gui.WelcomeScreen"/>
       
       <bean name="gui:newGameScreen" class="de.davelee.trams.gui.NewGameScreen"/>
       
       <bean name="gui:scenarioDescriptionScreen" class="de.davelee.trams.gui.ScenarioDescriptionScreen"/>

       <bean name="gui:controlScreen" class="de.davelee.trams.gui.ControlScreen"/>

       <bean name="gui:splashScreen" class="de.davelee.trams.gui.SplashScreen">
              <property name="version" value="${trams.version}"/>
       </bean>
       
       <!-- Dialogs -->
       
       <bean name="gui:exitDialog" class="de.davelee.trams.gui.ExitDialog"/>

       <!-- Panels -->

       <bean name="gui:displayPanel" class="de.davelee.trams.gui.panels.DisplayPanel"/>

       <bean name="gui:scenarioPanel" class="de.davelee.trams.gui.panels.ScenarioPanel"/>

       <bean name="gui:locationMapPanel" class="de.davelee.trams.gui.panels.LocationMapPanel"/>

       <bean name="gui:viewTimetablePanel" class="de.davelee.trams.gui.panels.ViewTimetablePanel"/>

       <bean name="gui:timetablePanel" class="de.davelee.trams.gui.panels.TimetablePanel"/>

       <bean name="gui:journeyPatternPanel" class="de.davelee.trams.gui.panels.JourneyPatternPanel"/>

       <bean name="gui:routePanel" class="de.davelee.trams.gui.panels.RoutePanel"/>

       <bean name="gui:purchaseVehiclePanel" class="de.davelee.trams.gui.panels.PurchaseVehiclePanel"/>

       <bean name="gui:vehicleDepotPanel" class="de.davelee.trams.gui.panels.VehicleDepotPanel"/>

       <bean name="gui:employDriverPanel" class="de.davelee.trams.gui.panels.EmployDriverPanel"/>

       <bean name="gui:allocationPanel" class="de.davelee.trams.gui.panels.AllocationPanel"/>
       
</beans>